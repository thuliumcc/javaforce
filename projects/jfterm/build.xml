<project name="jfterm" default="jar" basedir=".">
  <description>jfterm</description>
  <!-- set global properties for this build -->
  <property name="app" value="jfterm"/>
  <property name="home" location="../.."/>
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="classpath" location="javaforce.jar"/>
  <property name="version" value="0.18"/>

  <import file="../../base.xml"/>

  <target name="depjars" depends="depnatives">
    <jar destfile="javaforce.jar">
      <zipfileset src="../../jars/javaforce.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfterm.sourceforge.net"/>
      </manifest>
    </jar>
    <jar destfile="jsch.jar">
      <zipfileset src="../../jars/jsch.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfterm.sourceforge.net"/>
      </manifest>
    </jar>
    <jar destfile="jzlib.jar">
      <zipfileset src="../../jars/jzlib.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfterm.sourceforge.net"/>
      </manifest>
    </jar>
  </target>

  <target name="compile" depends="depjars" description="compile the source">
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}"/>
    <javac srcdir="${src}" destdir="${build}" deprecation="true" target="1.6" source="1.6" debug="true" includeantruntime="false">
      <classpath path="${classpath}"/>
      <classpath>
        <fileset dir="." includes="jsch.jar"/>
        <fileset dir="." includes="jzlib.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jar" depends="compile" description="build jar file">
    <!-- Build jar file from class files -->
    <jar destfile="jfterm.jar" includes="*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <fileset dir="." includes="*.crt"/>
      <manifest>
        <attribute name="Main-Class" value="TermApp"/>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfterm.sourceforge.net"/>
      </manifest>
    </jar>
  </target>

  <!-- sudo ant install -->
  <target name="install" description="install files">
    <elf/>
    <copy file="jfterm.jar" todir="/usr/share/java"/>
    <copy file="jfterm.desktop" todir="/usr/share/applications"/>
    <copy file="jfterm.png" todir="/usr/share/icons/hicolor/48x48/apps"/>
    <copy file="jfterm.html" todir="/usr/share/jhelp"/>
  </target>

  <target name="release-bin" description="create release zip file">
    <zip destfile="jfterm-${version}.zip">
      <fileset dir=".">
        <include name="*.jar"/>
        <include name="*.txt"/>
        <include name="*.html"/>
        <include name="run.bat"/>
        <include name="jfterm"/>
      </fileset>
      <fileset dir="../.." includes="license.txt"/>
    </zip>
    <move file="jfterm-${version}.zip" todir="${home}/release"/>
  </target>

  <target name="release-src" depends="" description="create release zip file">
    <zip destfile="jfterm-src-${version}.zip">
      <fileset dir="../../..">
        <include name="jf/license.txt"/>
        <include name="jf/base.xml"/>
        <include name="jf/projects/jfterm/src/*.java"/>
        <include name="jf/projects/jfterm/src/*.form"/>
        <include name="jf/projects/jfterm/*.png"/>
        <include name="jf/projects/jfterm/*.txt"/>
        <include name="jf/projects/jfterm/build.xml"/>
        <include name="jf/projects/jfterm/*.html"/>
        <include name="jf/projects/jfterm/run.bat"/>
        <include name="jf/projects/jfterm/jfterm"/>
        <include name="jf/projects/jfterm/nbproject/*.xml"/>
        <include name="jf/jars/jsch*.jar"/>
        <include name="jf/jars/jzlib*.jar"/>
        <include name="jf/jars/javaforce.jar"/>
        <include name="jf/keys/*.xml"/>
        <include name="jf/keys/*.txt"/>
        <include name="jf/stubs/*"/>
      </fileset>
    </zip>
    <move file="jfterm-src-${version}.zip" todir="${home}/release"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/*.jar"/>
    </delete>
  </target>
</project>
